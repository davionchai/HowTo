*** setup venv ***
python3 -m venv [directory]

//setup venv with os level python library
python3 -m venv [directory] --system-site-packages

//install pip from requirements
pip install -r requirements.txt

//activate venv
source [directory]/bin/activate

//deactivate venv
deactivate

//check python3
which python

//check which modules are installed
pip list

//export modules to requirements.txt
pip freeze > requirements.txt

//delete venv
rm -rf [directory]/